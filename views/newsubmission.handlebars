 <section class="section is-medium">
    <div class="field">
      <label class="label">Title</label>
      <div class="control">
        <input id="new-post-title" class="input" type="text" placeholder="Submission Title">
      </div>
    </div>
    
    
    <div class="field">
      <label class="label">Subject</label>
      <div class="control">
        <div class="select">
          <select id="new-post-subject">
            <option>Review</option>
            <option>Guide</option>
          </select>
        </div>

        <div class="select">
          <select id="new-post-genre">
            {{#each genres}}
            <option>{{this.name}}</option>
            {{/each}}
          </select>
        </div>

      </div>
    </div>
    <div class="field">
      <label class="label">Submission</label>
      <div class="control">
        <textarea id="new-post-body" class="textarea" placeholder="Submission Text"></textarea>
      </div>
    </div>
    
    <div class="field">
    </div>
    
    <div class="field">
    </div>
    
    <div class="field is-grouped">
      <div class="control">
        <button id="new-post-button" class="button is-link">Submit</button>
      </div>
      <div class="control">
        <button class="button is-link is-light">Cancel</button>
      </div>
    </div>
    </section>