    <section class="section is-medium">
      <div class="field is-grouped">
        <p class="control is-expanded">
          <input id="search-title" class="input" type="text" placeholder="Search">
        </p>
        <p class="control">
          <a id="title-search-button" class="button is-primary">
            Search
          </a>
        </p>
      </div>
      <div class="field has-addons">
        <div class="control is-expanded">
          <div class="select is-fullwidth">
            <select id="genre-search-query" name="genre">
              <option value="Select Genre">Select Genre</option>
{{#each genres}}
<option><a href="/submisisons/by-genre/{{this.name}}">{{this.name}}</a></option>
{{/each}}
            </select>
          </div>
        </div>
        <div class="control">
          <button id="genre-search-button" type="submit" class="button is-primary">Choose</button>
        </div>
      </div>
      </section>